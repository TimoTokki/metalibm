# This script will download and install several things in the current directory.
# You should therefore probably run it in a new empty directory.

# INSTALLATION

LOCAL_DIR=$PWD

git clone git+ssh://scm.gforge.inria.fr//gitroot/metalibm/pythonsollya.git
git clone git+ssh://scm.gforge.inria.fr//gitroot/metalibm/metalibm-lugdunum.git
cd metalibm-lugdunum && git submodule update --init --recursive
cd $LOCAL_DIR

INSTALL_DIR=$PWD/local_install
mkdir $INSTALL_DIR
wget https://gforge.inria.fr/frs/download.php/33151/sollya-4.1.tar.gz
tar -xzf sollya-4.1.tar.gz
cd sollya-4.1/ && ./configure --prefix=$INSTALL_DIR && make -j 4 && make install

cd $LOCAL_DIR
cd pythonsollya/ && LOCAL_INSTALL_DIR=$INSTALL_DIR python setup.py build && python setup.py install --prefix $INSTALL_DIR 

cd $LOCAL_DIR
echo "export PYTHONPATH=$LOCAL_DIR/metalibm-lugdunum/metalibm_core/:$LOCAL_DIR/metalibm-lugdunum/metalibm_functions/:$INSTALL_DIR/lib/python2.7/site-packages/:$PYTHONPATH" > metalibm_setup_env.bash



# USAGE EXAMPLE

source metalibm_setup_env.bash

python metalibm-lugdunum/metalibm_functions/ml_exp.py --disable-fma
